#include <climits>
bool isPossibleSoln(vector<int> &stalls, int k,int mid){
    int cowCount=1;
    int lastpos=stalls[0];

    for(int i=0;i<stalls.size();i++){
        if(stalls[i]-lastpos>=mid){  //distance>=mid
            cowCount++;
            if(cowCount==k){
                return true;
            }
            lastpos=stalls[i];
        }
    }
    return false;
}
int aggressiveCows(vector<int> &stalls, int k)
{
    //    Write your code here.
    sort(stalls.begin(),stalls.end());
    int s=0;
    int maxi=INT_MIN;

    for(int i=0;i<stalls.size();i++){
        maxi=max(maxi,stalls[i]);
    }

    int e=maxi;
    int ans=-1;
    int mid=s+(e-s)/2;

    while(s<=e){
        if(isPossibleSoln(stalls,k,mid)){
            ans=mid;
            //right
            s=mid+1;
        }
        else{
            //left
            e=mid-1;
        }
        mid=s+(e-s)/2;
    }
    return ans;
}
